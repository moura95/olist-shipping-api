FROM golang:1.22-alpine AS builder

WORKDIR /app

COPY . .

RUN go mod tidy && go mod download

# Build simples
RUN go build -o main cmd/main.go

# Imagem final mínima
FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /app

# Copiar apenas o binário
COPY --from=builder /app/main .

# Usar porta dinâmica
EXPOSE 8080

CMD ["./main"]